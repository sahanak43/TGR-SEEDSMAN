{
    "name": "@scandiweb/adobe-data-services",
    "version": "2.0.0",
    "description": "Adobe Data Services frontend compatibility for ScandiPWA",
    "license": "UNLICENSED",
    "scandipwa": {
        "type": "extension"
    },
    "dependencies": {
        "@adobe/magento-storefront-events-sdk": "^1.1.15",
        "eslint-plugin-header": "^3.1.1"
    },
    "eslintConfig": {
        "extends": "@scandipwa",
        "plugins": [
            "react",
            "header"
        ],
        "rules": {
            "max-lines": "off",
