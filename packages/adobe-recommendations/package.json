{
    "name": "@scandiweb/adobe-recommendations",
    "version": "2.1.0",
    "description": "Adobe Recommendations frontend compatibility for ScandiPWA",
    "license": "UNLICENSED",
    "scandipwa": {
        "type": "extension"
    },
    "dependencies": {
        "@magento/recommendations-js-sdk": "^2.0.5",
        "eslint-plugin-header": "^3.1.1"
    },
    "eslintConfig": {
        "extends": "@scandipwa",
        "plugins": [
            "react",
            "header"
        ],
        "rules": {
            "max-lines": "off",
            "header/header": [
                2,
                "block",
                [
                    "*",
                    " * Adobe Recommendations compatibility for ScandiPWA",
                    " * @copyright Scandiweb, Inc. All rights reserved.",
                    " "
                ],
                2
            ]
        }
    }
}
